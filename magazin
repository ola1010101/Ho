				if (rukzak == 2)
				{
					chak = chak - rukzak2;
				}
				if (rukzak == 3)
				{
					chak = chak - rukzak3;
				}
				if (rukzak == 4)
				{
					chak = chak - rukzak4;
				}
				if (rukzak == 5)
				{
					chak = chak - rukzak5;
				}

