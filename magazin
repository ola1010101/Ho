		{
			chak = chak + chemod1;
		}
		if (chemodan == 2)
		{
			chak = chak + chemod2;

		}
		if (chemodan == 3)
		{
			chak = chak + chemod3;
		}
		if (chemodan == 4)
		{
			chak = chak + chemod4;
		}


