	std::cin >> acoptiment;




	while (acoptiment == 2)
	{


		if (acoptiment == 2)
		{
			std::cout << "выберите номер каталога который желаете посмотреть:\n 1. дамские сумки\n 2. рюкзаки\n 3. чемоданы \n ";
			std::cin >> catalog;

