}




if (chak == 10500)
{
	std::cout << " поздравляю в собрали весь крутой сет";
}
if (chak == 1000000)
{
	std::cout << " поздравляю в собрали сет: элтный бомж ";
}
std::cout << " ваш чек вышел " << chak << "рублей\n";

if (chak >= 10000)
{
	itog = chak - (chak * ckidka);
	std::cout << " ваш чек с учётом скидки шел " << itog << "рублей\n";
}

return 0; 


}
